<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/parent_padding10"
    tools:context=".Question1Activity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/question_tag"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#000000"
        android:background="@drawable/button" />


    <TextView
        style="@style/CategoryTextViews"
        android:text="@string/question_1"
        android:layout_margin="@dimen/text_view_margin"/>

    <RadioGroup
        android:id="@+id/question1_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RadioButton
        android:id="@+id/answer1_1"
        style="@style/CategoryRadioButton"
        android:text="@string/answer1_1"
        android:onClick="check"/>

    <RadioButton
        android:id="@+id/answer1_2"
        style="@style/CategoryRadioButton"
        android:text="@string/answer1_2"
        android:onClick="check"/>

    <RadioButton
        android:id="@+id/answer1_3"
        style="@style/CategoryRadioButton"
        android:text="@string/answer1_3"
        android:onClick="check"/>

    <RadioButton
        android:id="@+id/answer1_4"
        style="@style/CategoryRadioButton"
        android:text="@string/answer1_4"
        android:onClick="check"/>
    </RadioGroup>
    </LinearLayout>

    <Button
        style="@style/CategoryButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="@string/next_page"
        android:onClick="lunchPage2"
        android:shadowColor="#000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="10"/>



</RelativeLayout>