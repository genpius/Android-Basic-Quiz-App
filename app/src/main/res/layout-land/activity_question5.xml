<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/parent_padding10"
    tools:context=".Question5Activity">

    <TextView
        android:id="@+id/tag"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/question5_tag"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="@drawable/button" />

    <TextView
        android:id="@+id/question5_text"
        style="@style/CategoryTextViews"
        android:text="@string/question_5"
        android:layout_margin="@dimen/text_view_margin"
        android:layout_below="@id/tag"/>

    <RadioGroup
        android:id="@+id/question5_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question5_text">

        <RadioButton
            android:id="@+id/answer5_1"
            style="@style/CategoryRadioButton"
            android:text="@string/answer5_1"
            android:onClick="check"/>

        <RadioButton
            android:id="@+id/answer5_2"
            style="@style/CategoryRadioButton"
            android:text="@string/answer5_2"
            android:onClick="check"/>

        <RadioButton
            android:id="@+id/answer5_3"
            style="@style/CategoryRadioButton"
            android:text="@string/answer5_3"
            android:onClick="check"/>

        <RadioButton
            android:id="@+id/answer5_4"
            style="@style/CategoryRadioButton"
            android:text="@string/answer5_4"
            android:onClick="check"/>
    </RadioGroup>

    <Button
        style="@style/CategoryButton"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:text="@string/previous_page"
        android:onClick="previousPage4"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="10"/>


    <Button
        style="@style/CategoryButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="@string/next_page"
        android:onClick="lunchPage6"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="10"/>




</RelativeLayout>