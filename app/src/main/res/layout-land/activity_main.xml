<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/parent_padding10"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/android:icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/android_icon"
                android:src="@drawable/android" />

            <TextView
                android:id="@+id/android_text"
                style="@style/MainPageText"
                android:padding="10dp"
                android:shadowColor="#000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="10"
                android:text="@string/android_text"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/basic_text"
                style="@style/MainPageText"
                android:shadowColor="#000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="10"
                android:text="@string/basic_text"
                android:padding="10dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold|italic" />

            <TextView
                style="@style/MainPageText"
                android:shadowColor="#000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="10"
                android:text="@string/quiz_text"
                android:padding="10dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold|italic" />
        </LinearLayout>
    </ScrollView>

    <Button
        style="@style/CategoryButton"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:onClick="popUp"
        android:shadowColor="#000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="10"
        android:text="@string/begin_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/parent_padding10"/>

</RelativeLayout>