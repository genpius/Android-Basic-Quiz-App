<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/parent_padding10"
    tools:context=".Question8Activity">

    <TextView
        android:id="@+id/tag"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/question8_tag"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/button"
        android:backgroundTint="@color/colorPrimary"/>


    <TextView
        android:id="@+id/question8_text"
        style="@style/CategoryTextViews"
        android:layout_margin="@dimen/text_view_margin"
        android:text="@string/question_8"
        android:layout_below="@id/tag"/>

    <RadioGroup
        android:id="@+id/question8_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question8_text">

        <RadioButton
            android:id="@+id/answer8_1"
            style="@style/CategoryRadioButton"
            android:text="@string/answer8_1"
            android:onClick="check"/>

        <RadioButton
            android:id="@+id/answer8_2"
            style="@style/CategoryRadioButton"
            android:text="@string/answer8_2"
            android:onClick="check"/>
    </RadioGroup>

    <Button
        style="@style/CategoryButton"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:onClick="previousPage7"
        android:text="@string/previous_page"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="10"/>


    <Button
        style="@style/CategoryButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="lunchPage9"
        android:text="@string/next_page"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="10"/>


</RelativeLayout>