<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/parent_padding10"
    tools:context=".Question4Activity">

    <TextView
        android:id="@+id/tag"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/question4_tag"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/button"
        android:backgroundTint="@color/colorPrimary"/>

    <TextView
        android:id="@+id/question4_text"
        style="@style/CategoryTextViews"
        android:layout_margin="@dimen/text_view_margin"
        android:text="@string/question_4"
        android:layout_below="@id/tag"/>

    <CheckBox
        android:id="@+id/answer4_1"
        style="@style/CategoryRadioButton"
        android:text="@string/answer4_1"
        android:layout_below="@id/question4_text"
        android:onClick="check"/>

    <CheckBox
        android:id="@+id/answer4_2"
        style="@style/CategoryRadioButton"
        android:text="@string/answer4_2"
        android:layout_below="@id/answer4_1"
        android:onClick="check"/>

    <CheckBox
        android:id="@+id/answer4_3"
        style="@style/CategoryRadioButton"
        android:text="@string/answer4_3"
        android:layout_below="@id/answer4_2"
        android:onClick="check"/>

    <CheckBox
        android:id="@+id/answer4_4"
        style="@style/CategoryRadioButton"
        android:text="@string/answer4_4"
        android:layout_below="@id/answer4_3"
        android:onClick="check1"/>


    <Button
        style="@style/CategoryButton"
        android:layout_alignParentBottom="true"
        android:onClick="previousPage3"
        android:text="@string/previous_page"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="10"/>


    <Button
        style="@style/CategoryButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="lunchPage5"
        android:text="@string/next_page"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="10"/>


</RelativeLayout>