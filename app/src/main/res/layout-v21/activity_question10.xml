<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/parent_padding10"
    android:background="@drawable/white_b"
    tools:context=".Question10Activity">

    <TextView
        android:id="@+id/tag"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/question10_tag"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#fff"
        android:background="@drawable/button"
        android:backgroundTint="@color/colorPrimary"/>

    <TextView
        android:id="@+id/question10_text"
        style="@style/CategoryTextViews"
        android:layout_margin="@dimen/text_view_margin"
        android:text="@string/question_10"
        android:layout_below="@id/tag"/>

    <EditText
        android:id="@+id/edit_text1"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_below="@id/question10_text"
        android:hint="@string/EditText_hint"
        android:inputType="text"
        android:backgroundTint="@color/colorPrimary"/>


    <Button
        android:id="@+id/previous_page9"
        style="@style/CategoryButton"
        android:layout_alignParentBottom="true"
        android:onClick="previousPage9"
        android:text="@string/previous_page"
        android:shadowColor="#000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="10"/>


    <Button
        android:id="@+id/grade_page"
        style="@style/CategoryButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="submit"
        android:text="@string/submit"
        android:shadowColor="#000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="10"/>


</RelativeLayout>