<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/popup_design"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/pop_close"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="end"
        android:layout_margin="5dp"
        android:background="@drawable/circlebackground"
        android:gravity="center"
        android:text="@string/x_text"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/s_text"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/circlebackground"
            android:backgroundTint="@color/white"
            android:fontFamily="cursive"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:text="@string/splash_s"
            android:textAllCaps="true"
            android:textColor="@color/lightcoral"
            android:textSize="40sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/l_text"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/circlebackground"
            android:backgroundTint="@color/black"
            android:fontFamily="cursive"
            android:gravity="center"
            android:shadowColor="@color/white"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:text="@string/splash_l"
            android:textAllCaps="true"
            android:textColor="@color/lemon"
            android:textSize="40sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/u_text"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/circlebackground"
            android:backgroundTint="@color/colorAccent"
            android:fontFamily="cursive"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:text="@string/splash_u"
            android:textAllCaps="true"
            android:textColor="@color/yellow"
            android:textSize="40sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <EditText
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/white"
        android:hint="@string/enter_your_name_editText"
        android:inputType="textPersonName"
        android:textColorHint="@color/white"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/start"
        style="@style/CategoryButton"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/parent_padding10"
        android:layout_marginTop="@dimen/parent_padding10"
        android:onClick="lunchPage1"
        android:padding="@dimen/parent_padding10"
        android:shadowColor="@color/black"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="10"
        android:text="@string/start_button" />

</LinearLayout>